import tkinter as tk
import random



# Game Logic Function

def play_game():
    player_choice = user_choice.get()

    if player_choice == "":
        lbl_result.config(text="Please select Rock, Paper, or Scissors!")
        return

    computer_choice = random.choice(["Rock", "Paper", "Scissors"])

    lbl_computer.config(text=f"Computer chose: {computer_choice}")

    # Determine winner
    if player_choice == computer_choice:
        result = "It's a Tie!"

    elif player_choice == "Rock" and computer_choice == "Scissors":
        result = "You Win! Rock beats Scissors."

    elif player_choice == "Scissors" and computer_choice == "Paper":
        result = "You Win! Scissors beats Paper."

    elif player_choice == "Paper" and computer_choice == "Rock":
        result = "You Win! Paper beats Rock."

    else:
        result = "Computer Wins!"

    lbl_result.config(text=result)


# Tkinter Window Setup

window = tk.Tk()
window.title("Rock-Paper-Scissors Game")
window.geometry("400x350")
window.resizable(False, False)



# Heading Label

lbl_title = tk.Label(
    window,
    text="Rock Paper Scissors Game",
    font=("Arial", 16, "bold")
)
lbl_title.pack(pady=15)



# Player Choice Section

user_choice = tk.StringVar()

lbl_select = tk.Label(window, text="Choose one:", font=("Arial", 12))
lbl_select.pack()

# Radio Buttons
r1 = tk.Radiobutton(window, text="Rock", variable=user_choice, value="Rock")
r2 = tk.Radiobutton(window, text="Paper", variable=user_choice, value="Paper")
r3 = tk.Radiobutton(window, text="Scissors", variable=user_choice, value="Scissors")

r1.pack()
r2.pack()
r3.pack()



# Play Button
btn_play = tk.Button(
    window,
    text="Play",
    font=("Arial", 12),
    command=play_game
)
btn_play.pack(pady=15)



# Result Labels

lbl_computer = tk.Label(window, text="", font=("Arial", 12))
lbl_computer.pack()

lbl_result = tk.Label(window, text="", font=("Arial", 12, "bold"))
lbl_result.pack(pady=20)



# Run Application

window.mainloop()
